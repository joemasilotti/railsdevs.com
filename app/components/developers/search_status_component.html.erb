<div class="flex items-center space-x-2">
  <% if actively_looking? %>
    <%= inline_svg_tag "icons/solid/search_circle.svg", class: "h-5 w-5 text-green-500", aria_hidden: true %>
  <% elsif open? %>
    <%= inline_svg_tag "icons/solid/search_circle.svg", class: "h-5 w-5 text-gray-500", aria_hidden: true %>
  <% else %>
    <%= inline_svg_tag "icons/solid/x_circle.svg", class: "h-5 w-5 text-gray-500", aria_hidden: true %>
  <% end %>

  <% if actively_looking? %>
    <%= tag.span class: ["text-sm font-medium", "text-green-700"] do %>
      <%= t("developers.search_status.actively_looking_tag") %>
    <% end %>
  <% elsif open? %>
    <%= tag.span class: ["text-sm font-medium", "text-gray-900"] do %>
      <%= t("developers.search_status.open_tag") %>
    <% end %>
  <% else %>
    <%= tag.span class: ["text-sm font-medium", "text-gray-900"] do %>
      <%= t("developers.search_status.not_interested_tag") %>
    <% end %>
  <% end %>
</div>
